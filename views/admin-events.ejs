<div class="file-upload" id="imageUploadArea">
    <i class="fas fa-image fa-3x text-primary mb-3"></i>
    
    <!-- VISIBLE FILE INPUT FOR MOBILE -->
    <input type="file" class="form-control d-md-none mb-3" 
           id="eventImageMobile" name="eventImage" 
           accept=".jpg,.jpeg,.png,.gif,.webp" 
           style="opacity: 1; position: relative; z-index: 1;"
           onchange="handleMobileFileSelect(this)">
    
    <!-- DESKTOP VERSION (HIDDEN ON MOBILE) -->
    <div class="d-none d-md-block">
        <h5>Drop event image here or click to browse</h5>
        <p class="text-muted">Supported formats: JPG, PNG, GIF, WebP (Max: 5MB)</p>
        <input type="file" class="d-none" id="eventImageDesktop" name="eventImage" 
               accept=".jpg,.jpeg,.png,.gif,.webp">
        <button type="button" class="btn btn-primary mt-2" id="desktopUploadBtn">
            <i class="fas fa-folder-open"></i> Choose Image
        </button>
    </div>
    
    <!-- MOBILE INSTRUCTIONS -->
    <div class="d-md-none text-center">
        <h5>Tap to select image</h5>
        <p class="text-muted">Use the file selector above</p>
        <div class="alert alert-info small mt-2">
            <i class="fas fa-mobile-alt"></i> <strong>Mobile Tip:</strong> Use camera or gallery
        </div>
    </div>
    
    <div id="imageName" class="mt-2 text-success fw-bold"></div>
</div>
                    <img id="imagePreview" class="image-preview" alt="Image preview">
                </div>

                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" id="featuredEvent" name="featured">
