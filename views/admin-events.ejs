<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Events - The God of Chosen Answers Prayers</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .admin-container {
            min-height: 80vh;
            padding: 2rem 0;
        }
        .admin-header {
            background: linear-gradient(135deg, var(--primary), #600000);
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
        }
        .upload-section, .events-section {
            background: white;
            border-radius: 10px;
            padding: 2rem;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            margin-bottom: 2rem;
        }
        .image-preview {
            max-width: 300px;
            max-height: 200px;
            border-radius: 8px;
            margin-top: 1rem;
            display: none;
        }
        .event-card {
            border: 1px solid #e9ecef;
            border-radius: 10px;
            overflow: hidden;
            margin-bottom: 1.5rem;
            transition: all 0.3s ease;
        }
        .event-card:hover {
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        .event-image {
            width: 100%;
            height: 150px;
            object-fit: cover;
        }
        .event-details {
            padding: 1rem;
        }
        .file-upload {
            border: 2px dashed #dee2e6;
            border-radius: 8px;
            padding: 2rem;
            text-align: center;
            transition: all 0.3s;
            background: #f8f9fa;
            cursor: pointer;
        }
        .file-upload:hover {
            border-color: var(--primary);
            background: #f0f4f8;
        }
        .event-status-badge {
            padding: 0.3rem 0.8rem;
            border-radius: 12px;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
        }
        .status-upcoming { background: var(--success); color: white; }
        .status-ongoing { background: var(--warning); color: #212529; }
        .status-completed { background: var(--gray); color: white; }
    </style>
</head>
<body class="admin-page">
    <!-- Admin Header -->
    <div class="admin-header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1><i class="fas fa-calendar-alt"></i> Manage Events</h1>
                    <p class="mb-0">Upload and manage church events and programs</p>
                </div>
                <div>
                    <a href="/admin" class="btn btn-light me-2">
                        <i class="fas fa-arrow-left"></i> Back to Messages
                    </a>
                    <a href="/admin-logout" class="btn btn-outline-light">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Admin Content -->
    <div class="container admin-container">
        <!-- Success Message -->
        <% if (success) { %>
            <div class="alert alert-success alert-dismissible fade show">
                <i class="fas fa-check-circle"></i> <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <!-- Admin Navigation -->
        <div class="admin-actions mb-4">
            <a href="/admin" class="btn btn-secondary">
                <i class="fas fa-envelope"></i> Manage Messages
            </a>
            <a href="/admin-events" class="btn btn-primary">
                <i class="fas fa-calendar-alt"></i> Manage Events
            </a>
            <a href="/" class="btn btn-outline-primary">
                <i class="fas fa-home"></i> View Website
            </a>
        </div>

        <!-- Upload Event Section -->
        <div class="upload-section">
            <h3 class="mb-4"><i class="fas fa-plus-circle"></i> Add New Event</h3>
            
            <form id="eventForm" action="/upload-event" method="POST" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label" for="eventTitle">Event Title *</label>
                            <input type="text" class="form-control" id="eventTitle" name="title" 
                                   placeholder="Enter event title" required>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label" for="eventDate">Start Date & Time *</label>
                            <input type="datetime-local" class="form-control" id="eventDate" name="date" required>
                        </div>
                    </div>
                </div>

                <!-- NEW: End Date Field -->
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label" for="eventEndDate">End Date & Time (Optional)</label>
                            <input type="datetime-local" class="form-control" id="eventEndDate" name="endDate">
                            <small class="text-muted">For multi-day events. Leave empty for single-day events.</small>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label" for="eventVenue">Venue *</label>
                            <input type="text" class="form-control" id="eventVenue" name="venue" 
                                   placeholder="Enter event venue" required>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label" for="eventDescription">Description *</label>
                    <textarea class="form-control" id="eventDescription" name="description" 
                              rows="3" placeholder="Describe the event..." required></textarea>
                </div>

                <div class="form-group">
                    <label class="form-label" for="eventLink">Event Link (Optional)</label>
                    <input type="url" class="form-control" id="eventLink" name="link" 
                           placeholder="https://example.com/event-registration">
                </div>

<!-- File Upload Section -->
<div class="form-group">
    <label class="form-label">Event Image *</label>
    
    <!-- DESKTOP VERSION (Hidden on Mobile) -->
    <div class="d-none d-md-block">
        <div class="file-upload" id="desktopUploadArea">
            <i class="fas fa-image fa-3x text-primary mb-3"></i>
            <h5>Drop event image here or click to browse</h5>
            <p class="text-muted">Supported formats: JPG, PNG, GIF (Max: 5MB)</p>
            <input type="file" class="d-none" id="eventImageDesktop" name="eventImage" 
                   accept="image/*" required>
            <button type="button" class="btn btn-primary mt-2" id="desktopUploadBtn">
                <i class="fas fa-folder-open"></i> Choose Image
            </button>
            <div id="desktopFileName" class="mt-2 text-success fw-bold"></div>
        </div>
        <img id="desktopImagePreview" class="image-preview" alt="Image preview">
    </div>
    
    <!-- MOBILE VERSION (Visible only on Mobile) -->
    <div class="d-md-none">
        <div class="card mobile-upload-card">
            <div class="card-body text-center">
                <i class="fas fa-camera fa-3x text-primary mb-3"></i>
                <h5>Upload Event Image</h5>
                <p class="text-muted">Tap below to select from camera or gallery</p>
                
                <!-- Mobile File Input - VISIBLE AND LARGE -->
                <input type="file" 
                       class="form-control mobile-file-input" 
                       id="eventImageMobile" 
                       name="eventImage" 
                       accept="image/*,image/jpeg,image/png,image/gif,image/heic,image/heif"
                       capture="environment"
                       required
                       style="height: 50px; font-size: 16px; padding: 10px;">
                
                <div class="mt-3">
                    <small class="text-muted d-block mb-2">Or use:</small>
                    <div class="btn-group w-100">
                        <button type="button" class="btn btn-outline-primary" onclick="takePhoto()">
                            <i class="fas fa-camera"></i> Camera
                        </button>
                        <button type="button" class="btn btn-outline-secondary" onclick="openGallery()">
                            <i class="fas fa-images"></i> Gallery
                        </button>
                    </div>
                </div>
                
                <!-- Mobile Preview Area -->
                <div id="mobilePreviewArea" class="mt-3" style="display: none;">
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle"></i> Image selected
                    </div>
                    <div id="mobileFileName" class="text-success fw-bold mb-2"></div>
                    <img id="mobileImagePreview" class="img-fluid rounded" alt="Preview" style="max-height: 200px;">
                </div>
                
                <!-- No File Selected Message -->
                <div id="mobileNoFile" class="alert alert-light mt-3">
                    <i class="fas fa-info-circle"></i> No image selected yet
                </div>
            </div>
        </div>
    </div>
</div>

                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" id="featuredEvent" name="featured">
                    <label class="form-check-label" for="featuredEvent">
                        Feature this event on homepage
                    </label>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="fas fa-upload"></i> Upload Event
                    </button>
                    <button type="reset" class="btn btn-outline-secondary btn-lg">
                        <i class="fas fa-redo"></i> Reset Form
                    </button>
                </div>
            </form>
        </div>

        <!-- Events Management Section -->
        <div class="events-section">
            <h3 class="mb-4"><i class="fas fa-list"></i> Manage Events</h3>
            
            <div id="eventsList">
                <div class="text-center text-muted py-4">
                    <i class="fas fa-spinner fa-spin fa-2x mb-3"></i>
                    <p>Loading events...</p>
                </div>
            </div>
        </div>

        <!-- Instructions -->
        <div class="alert alert-info">
            <h5><i class="fas fa-info-circle"></i> Event Management Instructions</h5>
            <ul class="mb-0">
                <li>Upload high-quality images for better display (recommended: 800x600px)</li>
                <li>Featured events appear prominently on the homepage</li>
                <li>Include clear event details for better engagement</li>
                <li>Add registration links if available</li>
                <li>Use end date for multi-day events to show "Ongoing" status</li>
                <li>Events are automatically sorted by date (soonest first)</li>
                <li>Past events remain visible unless deleted</li>
            </ul>
        </div>
    </div>

<script>
    // ===== MOBILE-FIRST FILE UPLOAD =====
    let selectedFile = null;
    
    // Set default dates
    document.addEventListener('DOMContentLoaded', function() {
        // Set default start date
        const now = new Date();
        now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
        const eventDateInput = document.getElementById('eventDate');
        if (eventDateInput) {
            eventDateInput.value = now.toISOString().slice(0, 16);
        }
        
        // Set default end date
        const endDateInput = document.getElementById('eventEndDate');
        if (endDateInput) {
            const endDate = new Date(now);
            endDate.setHours(endDate.getHours() + 2);
            endDateInput.value = endDate.toISOString().slice(0, 16);
        }
        
        // Initialize upload handlers
        initFileUploads();
        
        // Load events
        loadEvents();
    });
    
    // ===== INITIALIZE FILE UPLOADS =====
    function initFileUploads() {
        // DESKTOP HANDLERS
        const desktopInput = document.getElementById('eventImageDesktop');
        const desktopBtn = document.getElementById('desktopUploadBtn');
        const desktopArea = document.getElementById('desktopUploadArea');
        
        if (desktopBtn && desktopInput) {
            desktopBtn.addEventListener('click', () => desktopInput.click());
            
            desktopInput.addEventListener('change', function(e) {
                if (this.files.length > 0) {
                    handleDesktopFile(this.files[0]);
                }
            });
            
            // Desktop drag and drop
            if (desktopArea) {
                desktopArea.addEventListener('dragover', (e) => {
                    e.preventDefault();
                    desktopArea.classList.add('dragover');
                });
                
                desktopArea.addEventListener('dragleave', (e) => {
                    e.preventDefault();
                    desktopArea.classList.remove('dragover');
                });
                
                desktopArea.addEventListener('drop', (e) => {
                    e.preventDefault();
                    desktopArea.classList.remove('dragover');
                    
                    if (e.dataTransfer.files.length > 0) {
                        handleDesktopFile(e.dataTransfer.files[0]);
                    }
                });
                
                desktopArea.addEventListener('click', () => desktopInput.click());
            }
        }
        
        // MOBILE HANDLERS
        const mobileInput = document.getElementById('eventImageMobile');
        if (mobileInput) {
            mobileInput.addEventListener('change', function(e) {
                if (this.files.length > 0) {
                    handleMobileFile(this.files[0]);
                }
            });
        }
    }
    
    // ===== HANDLE DESKTOP FILE =====
    function handleDesktopFile(file) {
        if (!validateFile(file)) return;
        
        selectedFile = file;
        
        // Show file name
        const fileNameDisplay = document.getElementById('desktopFileName');
        if (fileNameDisplay) {
            fileNameDisplay.textContent = `Selected: ${file.name} (${(file.size / 1024 / 1024).toFixed(2)} MB)`;
        }
        
        // Show preview
        const preview = document.getElementById('desktopImagePreview');
        if (preview) {
            const reader = new FileReader();
            reader.onload = function(e) {
                preview.src = e.target.result;
                preview.style.display = 'block';
            };
            reader.readAsDataURL(file);
        }
    }
    
    // ===== HANDLE MOBILE FILE =====
    function handleMobileFile(file) {
        if (!validateFile(file)) return;
        
        selectedFile = file;
        
        // Show preview area
        const previewArea = document.getElementById('mobilePreviewArea');
        const noFileArea = document.getElementById('mobileNoFile');
        if (previewArea) previewArea.style.display = 'block';
        if (noFileArea) noFileArea.style.display = 'none';
        
        // Show file name
        const fileNameDisplay = document.getElementById('mobileFileName');
        if (fileNameDisplay) {
            fileNameDisplay.textContent = `${file.name} (${(file.size / 1024 / 1024).toFixed(2)} MB)`;
        }
        
        // Show preview
        const preview = document.getElementById('mobileImagePreview');
        if (preview) {
            const reader = new FileReader();
            reader.onload = function(e) {
                preview.src = e.target.result;
            };
            reader.readAsDataURL(file);
        }
    }
    
    // ===== VALIDATE FILE =====
    function validateFile(file) {
        // Check file type
        const validTypes = [
            'image/jpeg', 'image/jpg', 'image/png', 
            'image/gif', 'image/webp', 'image/heic', 
            'image/heif'
        ];
        
        if (!validTypes.includes(file.type.toLowerCase())) {
            alert('Error: Only image files are allowed! (JPG, PNG, GIF, WebP)');
            return false;
        }
        
        // Check file size
        if (file.size > 5 * 1024 * 1024) {
            alert('Error: File size must be less than 5MB!');
            return false;
        }
        
        return true;
    }
    
    // ===== MOBILE SPECIFIC FUNCTIONS =====
    function takePhoto() {
        // Create a camera-specific file input
        const cameraInput = document.createElement('input');
        cameraInput.type = 'file';
        cameraInput.accept = 'image/*';
        cameraInput.capture = 'environment'; // Rear camera
        cameraInput.style.display = 'none';
        
        cameraInput.onchange = function(e) {
            if (this.files.length > 0) {
                handleMobileFile(this.files[0]);
                
                // Also update the mobile input
                const mobileInput = document.getElementById('eventImageMobile');
                if (mobileInput) {
                    const dataTransfer = new DataTransfer();
                    dataTransfer.items.add(this.files[0]);
                    mobileInput.files = dataTransfer.files;
                }
            }
            document.body.removeChild(cameraInput);
        };
        
        document.body.appendChild(cameraInput);
        cameraInput.click();
    }
    
    function openGallery() {
        // Create a gallery-specific file input
        const galleryInput = document.createElement('input');
        galleryInput.type = 'file';
        galleryInput.accept = 'image/*';
        galleryInput.multiple = false;
        galleryInput.style.display = 'none';
        
        galleryInput.onchange = function(e) {
            if (this.files.length > 0) {
                handleMobileFile(this.files[0]);
                
                // Also update the mobile input
                const mobileInput = document.getElementById('eventImageMobile');
                if (mobileInput) {
                    const dataTransfer = new DataTransfer();
                    dataTransfer.items.add(this.files[0]);
                    mobileInput.files = dataTransfer.files;
                }
            }
            document.body.removeChild(galleryInput);
        };
        
        document.body.appendChild(galleryInput);
        galleryInput.click();
    }
    
    // ===== FORM SUBMISSION =====
    const eventForm = document.getElementById('eventForm');
    if (eventForm) {
        eventForm.addEventListener('submit', function(e) {
            // Basic validation
            const title = document.getElementById('eventTitle')?.value.trim();
            const date = document.getElementById('eventDate')?.value;
            const venue = document.getElementById('eventVenue')?.value.trim();
            const description = document.getElementById('eventDescription')?.value.trim();
            
            let errors = [];
            
            if (!title) errors.push('Event title is required');
            if (!date) errors.push('Event date is required');
            if (!venue) errors.push('Venue is required');
            if (!description) errors.push('Description is required');
            
            // Check for file (check all inputs)
            const hasFile = checkForFiles();
            if (!hasFile) {
                errors.push('Event image is required');
            }
            
            // End date validation
            const endDateInput = document.getElementById('eventEndDate')?.value;
            if (endDateInput && date) {
                const startDate = new Date(date);
                const endDate = new Date(endDateInput);
                if (endDate <= startDate) {
                    errors.push('End date must be after start date');
                }
            }
            
            if (errors.length > 0) {
                e.preventDefault();
                
                // Mobile-friendly error display
                if (window.innerWidth <= 768) {
                    // Simple alert for mobile
                    alert('Please fix these errors:\n\n' + errors.join('\n'));
                } else {
                    alert('Please fix the following errors:\n\nâ€¢ ' + errors.join('\nâ€¢ '));
                }
                return false;
            }
            
            // Show loading state
            const submitBtn = this.querySelector('button[type="submit"]');
            if (submitBtn) {
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Uploading...';
                submitBtn.disabled = true;
            }
            
            return true;
        });
    }
    
    function checkForFiles() {
        // Check mobile input
        const mobileInput = document.getElementById('eventImageMobile');
        if (mobileInput && mobileInput.files.length > 0) return true;
        
        // Check desktop input
        const desktopInput = document.getElementById('eventImageDesktop');
        if (desktopInput && desktopInput.files.length > 0) return true;
        
        // Check selected file variable
        return selectedFile !== null;
    }
    
    // ===== LOAD AND DISPLAY EVENTS =====
    async function loadEvents() {
        try {
            const response = await fetch('/events-data');
            let events = await response.json();
            
            const eventsList = document.getElementById('eventsList');
            
            if (events.length === 0) {
                eventsList.innerHTML = `
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-calendar-times fa-3x mb-3"></i>
                        <h5>No Events Yet</h5>
                        <p>Add your first event using the form above.</p>
                    </div>
                `;
                return;
            }
            
            // Sort events
            events.sort((a, b) => {
                if (a.featured && !b.featured) return -1;
                if (!a.featured && b.featured) return 1;
                
                const dateA = new Date(a.date);
                const dateB = new Date(b.date);
                const now = new Date();
                
                if (dateA > now && dateB > now) return dateA - dateB;
                if (dateA > now && dateB <= now) return -1;
                if (dateA <= now && dateB > now) return 1;
                return dateB - dateA;
            });
            
            let eventsHTML = '';
            
            // Featured events
            const featuredEvents = events.filter(event => event.featured);
            if (featuredEvents.length > 0) {
                eventsHTML += `
                    <div class="featured-events-section mb-4">
                        <h4 class="text-warning mb-3">
                            <i class="fas fa-star"></i> Featured Events (${featuredEvents.length})
                        </h4>
                        ${featuredEvents.map(event => generateEventHTML(event, true)).join('')}
                    </div>
                `;
            }
            
            // Regular events
            const regularEvents = events.filter(event => !event.featured);
            if (regularEvents.length > 0) {
                eventsHTML += `
                    <div class="regular-events-section">
                        <h4 class="text-primary mb-3">
                            <i class="fas fa-calendar-alt"></i> All Events (${regularEvents.length})
                        </h4>
                        ${regularEvents.map(event => generateEventHTML(event, false)).join('')}
                    </div>
                `;
            }
            
            eventsList.innerHTML = eventsHTML;
            
        } catch (error) {
            console.error('Error loading events:', error);
            document.getElementById('eventsList').innerHTML = `
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle"></i> Error loading events. Please refresh the page.
                </div>
            `;
        }
    }
    
    // ===== GENERATE EVENT HTML =====
    function generateEventHTML(event, isFeatured) {
        const eventDate = new Date(event.date);
        const endDate = event.endDate ? new Date(event.endDate) : null;
        const now = new Date();
        
        // Calculate status
        let status = 'upcoming';
        let statusClass = 'status-upcoming';
        
        if (endDate) {
            if (now < eventDate) {
                status = 'upcoming';
            } else if (now >= eventDate && now <= endDate) {
                status = 'ongoing';
                statusClass = 'status-ongoing';
            } else {
                status = 'completed';
                statusClass = 'status-completed';
            }
        } else {
            const eventDay = new Date(eventDate);
            eventDay.setHours(23, 59, 59, 999);
            
            if (now < eventDate) {
                status = 'upcoming';
            } else if (now <= eventDay) {
                status = 'ongoing';
                statusClass = 'status-ongoing';
            } else {
                status = 'completed';
                statusClass = 'status-completed';
            }
        }
        
        // Format date display
        let dateDisplay = eventDate.toLocaleDateString();
        let timeDisplay = eventDate.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
        
        if (endDate) {
            dateDisplay = `${eventDate.toLocaleDateString()} - ${endDate.toLocaleDateString()}`;
            const endTimeDisplay = endDate.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
            timeDisplay = `${timeDisplay} to ${endTimeDisplay}`;
        }
        
        return `
            <div class="event-card ${isFeatured ? 'featured-event' : ''} ${status === 'completed' ? 'opacity-75' : ''} mb-3">
                <div class="row g-0">
                    <div class="col-md-3">
                        <img src="/event-image/${event._id}" alt="${event.title}" class="event-image">
                    </div>
                    <div class="col-md-9">
                        <div class="event-details">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div>
                                    <h5 class="mb-1">${event.title}</h5>
                                    <p class="text-muted mb-1">
                                        <i class="far fa-calendar"></i> ${dateDisplay} â€¢ 
                                        <i class="far fa-clock"></i> ${timeDisplay}
                                    </p>
                                    <p class="mb-1"><strong>Venue:</strong> ${event.venue}</p>
                                </div>
                                <div class="d-flex gap-1">
                                    ${event.featured ? '<span class="badge bg-warning">Featured</span>' : ''}
                                    <span class="event-status-badge ${statusClass}">
                                        ${status === 'ongoing' ? 'ðŸ”¥ ' : ''}${status.charAt(0).toUpperCase() + status.slice(1)}
                                    </span>
                                </div>
                            </div>
                            <p class="mb-2">${event.description}</p>
                            ${event.link ? `<p class="mb-2"><strong>Link:</strong> <a href="${event.link}" target="_blank">${event.link}</a></p>` : ''}
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    Created: ${new Date(event.createdAt).toLocaleDateString()}
                                </small>
                                <div class="action-buttons">
                                    <a href="/edit-event/${event._id}" class="btn btn-primary btn-sm me-2">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    ${event.featured ? `
                                        <button onclick="unfeatureEvent('${event._id}')" class="btn btn-warning btn-sm me-2" title="Remove from Featured">
                                            <i class="fas fa-star"></i> Unfeature
                                        </button>
                                    ` : ''}
                                    <form action="/delete-event/${event._id}" method="POST" onsubmit="return confirm('Are you sure you want to delete \"${event.title}\"?')" style="display: inline;">
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        `;
    }
    
    // ===== UNFEATURE EVENT =====
    function unfeatureEvent(eventId) {
        if (confirm('Are you sure you want to remove this event from featured?')) {
            fetch(`/unfeature-event/${eventId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
            .then(response => {
                if (response.ok) {
                    window.location.reload();
                } else {
                    alert('Error unfeaturing event');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error unfeaturing event');
            });
        }
    }
