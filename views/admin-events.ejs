<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Events - Admin Panel</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
<style>
    :root {
        --primary: #8B0000;
        --primary-light: rgba(139, 0, 0, 0.1);
        --secondary: #2C3E50;
        --accent: #FFD700;
        --success: #28A745;
        --warning: #FFC107;
        --danger: #DC3545;
        --light-bg: #F8F9FA;
        --card-shadow: 0 8px 30px rgba(0,0,0,0.08);
        --transition: all 0.3s ease;
    }

    body.admin-page {
        background-color: var(--light-bg);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .admin-header {
        background: linear-gradient(135deg, var(--primary), #5a0000);
        color: white;
        padding: 1.5rem 0;
        margin-bottom: 2rem;
        box-shadow: 0 4px 12px rgba(139, 0, 0, 0.2);
        position: relative;
        overflow: hidden;
    }

    .admin-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 18c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm48 25c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm-43-7c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm63 31c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM34 90c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm56-76c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM12 86c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm28-65c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm23-11c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-6 60c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm29 22c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zM32 63c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm57-13c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-9-21c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM60 91c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM35 41c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM12 60c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2z' fill='%23ffffff' fill-opacity='0.05' fill-rule='evenodd'/%3E%3C/svg%3E");
        opacity: 0.1;
    }

    .admin-container {
        min-height: 80vh;
        padding: 2rem 0;
    }

    .card-section {
        background: white;
        border-radius: 16px;
        padding: 2rem;
        box-shadow: var(--card-shadow);
        margin-bottom: 2rem;
        border: 1px solid rgba(0,0,0,0.05);
        transition: var(--transition);
    }

    .card-section:hover {
        box-shadow: 0 12px 40px rgba(0,0,0,0.12);
    }

    .section-header {
        color: var(--secondary);
        border-bottom: 2px solid var(--primary-light);
        padding-bottom: 1rem;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .section-header i {
        color: var(--primary);
        background: var(--primary-light);
        width: 48px;
        height: 48px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
    }

    .form-label {
        font-weight: 600;
        color: var(--secondary);
        margin-bottom: 0.5rem;
    }

    .form-control, .form-select {
        border: 2px solid #e9ecef;
        border-radius: 10px;
        padding: 0.75rem 1rem;
        transition: var(--transition);
    }

    .form-control:focus, .form-select:focus {
        border-color: var(--primary);
        box-shadow: 0 0 0 0.25rem rgba(139, 0, 0, 0.15);
    }

    .file-upload-area {
        border: 3px dashed var(--primary-light);
        border-radius: 16px;
        padding: 3rem 2rem;
        text-align: center;
        transition: var(--transition);
        background: linear-gradient(135deg, #f8f9fa 0%, #f1f3f5 100%);
        cursor: pointer;
        position: relative;
        overflow: hidden;
    }

    .file-upload-area:hover, .file-upload-area.dragover {
        border-color: var(--primary);
        background: linear-gradient(135deg, #f1f3f5 0%, #e9ecef 100%);
        transform: translateY(-2px);
    }

    .file-upload-area i {
        color: var(--primary);
        filter: drop-shadow(0 4px 6px rgba(139, 0, 0, 0.1));
    }

    .image-preview-container {
        margin-top: 1.5rem;
        display: none;
    }

    .image-preview {
        width: 100%;
        max-width: 400px;
        height: 250px;
        object-fit: cover;
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0,0,0,0.1);
        border: 3px solid white;
    }

    .admin-actions {
        background: white;
        border-radius: 16px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        box-shadow: var(--card-shadow);
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
        border: 1px solid rgba(0,0,0,0.05);
    }

    .admin-actions .btn {
        border-radius: 10px;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 8px;
        transition: var(--transition);
    }

    .admin-actions .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 15px rgba(0,0,0,0.1);
    }

    .events-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 1.5rem;
        margin-top: 1.5rem;
    }

    .event-card {
        background: white;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: var(--card-shadow);
        transition: var(--transition);
        border: 1px solid rgba(0,0,0,0.05);
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .event-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(0,0,0,0.15);
    }

    .event-image-container {
        height: 200px;
        overflow: hidden;
        position: relative;
    }

    .event-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .event-card:hover .event-image {
        transform: scale(1.05);
    }

    .event-badge {
        position: absolute;
        top: 1rem;
        right: 1rem;
        background: rgba(0,0,0,0.7);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
        backdrop-filter: blur(4px);
    }

    .event-content {
        padding: 1.5rem;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .event-title {
        color: var(--secondary);
        font-weight: 700;
        font-size: 1.25rem;
        margin-bottom: 0.5rem;
        line-height: 1.4;
    }

    .event-meta {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1rem;
        color: #6c757d;
        font-size: 0.9rem;
    }

    .event-meta i {
        color: var(--primary);
    }

    .event-description {
        color: #495057;
        flex-grow: 1;
        margin-bottom: 1.5rem;
        line-height: 1.6;
    }

    .event-actions {
        display: flex;
        gap: 0.75rem;
        margin-top: auto;
    }

    .event-actions .btn {
        flex: 1;
        border-radius: 8px;
        font-weight: 600;
        padding: 0.5rem 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 6px;
        transition: var(--transition);
    }

    .btn-primary {
        background: linear-gradient(135deg, var(--primary), #9d0000);
        border: none;
    }

    .btn-primary:hover {
        background: linear-gradient(135deg, #9d0000, var(--primary));
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(139, 0, 0, 0.3);
    }

    .btn-danger {
        background: linear-gradient(135deg, var(--danger), #c82333);
        border: none;
    }

    .btn-danger:hover {
        background: linear-gradient(135deg, #c82333, var(--danger));
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(220, 53, 69, 0.3);
    }

    .featured-badge {
        background: linear-gradient(135deg, var(--accent), #ffdf4d);
        color: #212529;
        padding: 0.25rem 0.75rem;
        border-radius: 12px;
        font-size: 0.75rem;
        font-weight: 700;
        display: inline-flex;
        align-items: center;
        gap: 4px;
        margin-left: 0.5rem;
    }

    .instructions-card {
        background: linear-gradient(135deg, #e3f2fd, #f3e5f5);
        border-left: 4px solid var(--primary);
        border-radius: 12px;
        padding: 1.5rem;
        margin-top: 2rem;
    }

    .instructions-card h5 {
        color: var(--secondary);
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .instructions-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .instructions-list li {
        padding: 0.5rem 0;
        padding-left: 1.5rem;
        position: relative;
        color: #495057;
        line-height: 1.6;
    }

    .instructions-list li:before {
        content: '✓';
        position: absolute;
        left: 0;
        color: var(--primary);
        font-weight: bold;
    }

    .loading-spinner {
        padding: 3rem;
        text-align: center;
        color: #6c757d;
    }

    .loading-spinner i {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        color: var(--primary);
    }

    @media (max-width: 768px) {
        .admin-actions {
            flex-direction: column;
        }
        
        .admin-actions .btn {
            width: 100%;
            justify-content: center;
        }
        
        .events-grid {
            grid-template-columns: 1fr;
        }
        
        .card-section {
            padding: 1.5rem;
        }
    }

    .required-field::after {
        content: " *";
        color: var(--danger);
    }
</style>
</head>
<body class="admin-page">

<div class="admin-header">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="display-6 fw-bold mb-2"><i class="fas fa-calendar-alt me-3"></i>Manage Events</h1>
                <p class="mb-0 opacity-75">Upload and manage church events and programs</p>
            </div>
            <div class="d-flex gap-2">
                <a href="/admin" class="btn btn-light btn-sm px-3 py-2 rounded-pill">
                    <i class="fas fa-arrow-left me-2"></i>Back
                </a>
                <a href="/admin-logout" class="btn btn-outline-light btn-sm px-3 py-2 rounded-pill">
                    <i class="fas fa-sign-out-alt me-2"></i>Logout
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container admin-container">
    <% if (success) { %>
        <div class="alert alert-success alert-dismissible fade show d-flex align-items-center" role="alert">
            <i class="fas fa-check-circle fa-lg me-3"></i>
            <div><strong>Success!</strong> <%= success %></div>
            <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert"></button>
        </div>
    <% } %>
    
    <!-- Admin Navigation -->
    <div class="admin-actions">
        <a href="/admin" class="btn btn-secondary">
            <i class="fas fa-envelope"></i> Manage Messages
        </a>
        <a href="/admin-events" class="btn btn-primary">
            <i class="fas fa-calendar-alt"></i> Manage Events
        </a>
        <a href="/" class="btn btn-outline-primary">
            <i class="fas fa-home"></i> View Website
        </a>
        <a href="/admin-announcements" class="btn btn-info">
            <i class="fas fa-bullhorn"></i> Manage Announcements
        </a>
    </div>

    <!-- Add New Event Card -->
    <div class="card-section">
        <div class="section-header">
            <i class="fas fa-plus-circle"></i>
            <h3 class="mb-0">Add New Event</h3>
        </div>

        <form id="eventForm" action="/upload-event" method="POST" enctype="multipart/form-data">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label required-field">Event Title</label>
                    <input type="text" class="form-control" name="title" id="eventTitle" required 
                           placeholder="Enter event title">
                </div>
                <div class="col-md-6">
                    <label class="form-label required-field">Start Date</label>
                    <input type="datetime-local" class="form-control" name="date" id="eventDate" required>
                </div>
                
                <div class="col-md-6">
                    <label class="form-label">End Date (Optional)</label>
                    <input type="datetime-local" class="form-control" name="endDate" id="eventEndDate">
                </div>
                <div class="col-md-6">
                    <label class="form-label required-field">Venue</label>
                    <input type="text" class="form-control" name="venue" id="eventVenue" required 
                           placeholder="Enter event venue">
                </div>
                
                <div class="col-12">
                    <label class="form-label required-field">Description</label>
                    <textarea class="form-control" name="description" id="eventDescription" rows="4" 
                              required placeholder="Describe your event..."></textarea>
                </div>
                
                <div class="col-12">
                    <label class="form-label">Event Link (Optional)</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-link"></i></span>
                        <input type="url" class="form-control" name="link" placeholder="https://example.com/event">
                    </div>
                </div>
                
                <div class="col-12">
                    <label class="form-label required-field">Event Image</label>
                    <div class="file-upload-area" id="desktopUploadArea">
                        <i class="fas fa-cloud-upload-alt fa-3x mb-3"></i>
                        <h5 class="mb-2">Drag & drop or click to upload</h5>
                        <p class="text-muted mb-3">PNG, JPG, GIF up to 5MB</p>
                        <button type="button" class="btn btn-primary px-4 py-2 rounded-pill" id="desktopUploadBtn">
                            <i class="fas fa-folder-open me-2"></i> Choose Image
                        </button>
                        <input type="file" id="eventImage" name="eventImage" accept="image/*" required style="display:none;">
                        <div id="desktopFileName" class="mt-3 text-success fw-bold"></div>
                    </div>
                    
                    <div class="image-preview-container" id="imagePreviewContainer">
                        <p class="text-muted mb-2">Preview:</p>
                        <img id="desktopImagePreview" class="image-preview" alt="Event image preview">
                    </div>
                </div>
                
                <div class="col-12">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" name="featured" id="featuredEvent" style="width: 3em; height: 1.5em;">
                        <label class="form-check-label fw-bold ms-2" for="featuredEvent">
                            <i class="fas fa-star text-warning me-1"></i> Feature on homepage
                        </label>
                    </div>
                </div>
                
                <div class="col-12 mt-4">
                    <button type="submit" class="btn btn-success btn-lg px-4 py-3">
                        <i class="fas fa-upload me-2"></i> Upload Event
                    </button>
                </div>
            </div>
        </form>
    </div>

    <!-- Events Management Section -->
    <div class="card-section">
        <div class="section-header">
            <i class="fas fa-list"></i>
            <h3 class="mb-0">Manage Events</h3>
        </div>
        
        <div id="eventsList">
            <div class="loading-spinner">
                <i class="fas fa-spinner fa-spin"></i>
                <p class="mt-2">Loading events...</p>
            </div>
        </div>
    </div>

    <!-- Instructions Card -->
    <div class="instructions-card">
        <h5><i class="fas fa-lightbulb"></i> Event Management Best Practices</h5>
        <ul class="instructions-list">
            <li>Upload high-quality images with recommended dimensions of 800×600px</li>
            <li>Featured events appear prominently on the homepage carousel</li>
            <li>Include clear, concise descriptions for better engagement</li>
            <li>Add registration or information links when available</li>
            <li>Use end dates for multi-day events to show "Ongoing" status</li>
            <li>Events are automatically sorted chronologically (soonest first)</li>
            <li>Past events remain accessible in the archive unless deleted</li>
        </ul>
    </div>
</div>

<script>
    // Enhanced upload functionality
    const uploadArea = document.getElementById('desktopUploadArea');
    const fileInput = document.getElementById('eventImage');
    const fileNameDisplay = document.getElementById('desktopFileName');
    const imagePreview = document.getElementById('desktopImagePreview');
    const previewContainer = document.getElementById('imagePreviewContainer');

    uploadArea.addEventListener('click', () => fileInput.click());
    
    uploadArea.addEventListener('dragover', (e) => {
        e.preventDefault();
        uploadArea.classList.add('dragover');
    });
    
    uploadArea.addEventListener('dragleave', () => {
        uploadArea.classList.remove('dragover');
    });
    
    uploadArea.addEventListener('drop', (e) => {
        e.preventDefault();
        uploadArea.classList.remove('dragover');
        if (e.dataTransfer.files.length) {
            fileInput.files = e.dataTransfer.files;
            handleFileSelect();
        }
    });

    fileInput.addEventListener('change', handleFileSelect);

    function handleFileSelect() {
        const file = fileInput.files[0];
        if (!file) return;

        fileNameDisplay.textContent = `Selected: ${file.name} (${(file.size / 1024 / 1024).toFixed(2)} MB)`;
        
        const reader = new FileReader();
        reader.onload = (e) => {
            imagePreview.src = e.target.result;
            previewContainer.style.display = 'block';
        };
        reader.readAsDataURL(file);
    }

    // Enhanced events loading with better UI
    async function loadEvents() {
        try {
            const res = await fetch('/events-data');
            const events = await res.json();
            
            if (!events || events.length === 0) {
                document.getElementById('eventsList').innerHTML = `
                    <div class="text-center py-5">
                        <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">No events yet</h4>
                        <p class="text-muted">Start by adding your first event above</p>
                    </div>
                `;
                return;
            }
            
            let html = '<div class="events-grid">';
            
            events.forEach(evt => {
                const eventDate = new Date(evt.date);
                const now = new Date();
                let status = 'upcoming';
                let statusText = 'Upcoming';
                
                if (evt.endDate) {
                    const endDate = new Date(evt.endDate);
                    if (now >= eventDate && now <= endDate) {
                        status = 'ongoing';
                        statusText = 'Ongoing';
                    } else if (now > endDate) {
                        status = 'completed';
                        statusText = 'Completed';
                    }
                } else if (now > eventDate) {
                    status = 'completed';
                    statusText = 'Completed';
                }
                
                html += `
                    <div class="event-card ${evt.featured ? 'featured-event' : ''}">
                        <div class="event-image-container">
                            <img src="/event-image/${evt._id}" class="event-image" alt="${evt.title}">
                            <div class="event-badge">${statusText}</div>
                            ${evt.featured ? '<div class="featured-badge"><i class="fas fa-star"></i> Featured</div>' : ''}
                        </div>
                        <div class="event-content">
                            <h4 class="event-title">${evt.title}</h4>
                            <div class="event-meta">
                                <span><i class="fas fa-calendar"></i> ${eventDate.toLocaleDateString()}</span>
                                <span><i class="fas fa-clock"></i> ${eventDate.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})}</span>
                                <span><i class="fas fa-map-marker-alt"></i> ${evt.venue}</span>
                            </div>
                            <p class="event-description">${evt.description.substring(0, 120)}${evt.description.length > 120 ? '...' : ''}</p>
                            <div class="event-actions">
                                <a href="/edit-event/${evt._id}" class="btn btn-primary">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <form action="/delete-event/${evt._id}" method="POST" class="d-inline" 
                                      onsubmit="return confirm('Are you sure you want to delete this event?')">
                                    <button type="submit" class="btn btn-danger">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                `;
            });
            
            html += '</div>';
            document.getElementById('eventsList').innerHTML = html;
            
        } catch (error) {
            console.error('Error loading events:', error);
            document.getElementById('eventsList').innerHTML = `
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Failed to load events. Please try again.
                </div>
            `;
        }
    }

    // Load events on page load
    document.addEventListener('DOMContentLoaded', loadEvents);
    
    // Set minimum date to today for date inputs
    const today = new Date().toISOString().slice(0, 16);
    document.getElementById('eventDate').min = today;
    document.getElementById('eventEndDate').min = today;
</script>

</body>
</html>