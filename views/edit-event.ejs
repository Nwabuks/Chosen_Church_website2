<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Event | ChiBooks</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .edit-container {
            min-height: 80vh;
            padding: 2rem 0;
        }
        .edit-header {
            background: linear-gradient(135deg, var(--primary), #600000);
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
        }
        .edit-section {
            background: white;
            border-radius: 10px;
            padding: 2rem;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            margin-bottom: 2rem;
        }
        .form-group {
            margin-bottom: 1.5rem;
        }
        .form-label {
            font-weight: 600;
            color: var(--primary);
            margin-bottom: 0.5rem;
        }
        .form-control {
            border: 2px solid #e9ecef;
            border-radius: 8px;
            padding: 0.75rem;
            transition: all 0.3s;
        }
        .form-control:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 0.2rem rgba(139, 0, 0, 0.25);
        }
        .file-upload {
            border: 2px dashed #dee2e6;
            border-radius: 8px;
            padding: 2rem;
            text-align: center;
            transition: all 0.3s;
            background: #f8f9fa;
        }
        .file-upload:hover {
            border-color: var(--primary);
            background: #f0f4f8;
        }
        .current-image {
            background: #e9f7ef;
            border: 1px solid #d1f2e1;
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 1rem;
            text-align: center;
        }
        .current-image img {
            max-width: 300px;
            max-height: 200px;
            border-radius: 8px;
            margin-bottom: 1rem;
        }
        .admin-actions {
            display: flex;
            gap: 1rem;
            margin-bottom: 2rem;
            flex-wrap: wrap;
        }
        .featured-badge {
            background: var(--warning);
            color: #212529;
            padding: 0.3rem 0.8rem;
            border-radius: 12px;
            font-size: 0.8rem;
            font-weight: 600;
            margin-left: 0.5rem;
        }
    </style>
</head>
<body class="admin-page">
    <!-- Edit Header -->
    <div class="edit-header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1><i class="fas fa-edit"></i> Edit Event</h1>
                    <p class="mb-0">Update event details and settings</p>
                </div>
                <div>
                    <a href="/admin-events" class="btn btn-light me-2">
                        <i class="fas fa-arrow-left"></i> Back to Events
                    </a>
                    <a href="/admin-logout" class="btn btn-outline-light">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Content -->
    <div class="container edit-container">
        <!-- Admin Actions -->
        <div class="admin-actions">
            <a href="/admin-events" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Events
            </a>
            <a href="/" class="btn btn-outline-primary">
                <i class="fas fa-home"></i> View Website
            </a>
        </div>

        <!-- Edit Form -->
        <div class="edit-section">
            <h3 class="mb-4"><i class="fas fa-edit"></i> Edit Event: <%= event.title %></h3>
            
            <!-- Current Event Status -->
            <div class="alert alert-info mb-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <i class="fas fa-info-circle"></i> 
                        <strong>Event Status:</strong> 
                        <% 
                            const now = new Date();
                            const eventDate = new Date(event.date);
                            const endDate = event.endDate ? new Date(event.endDate) : null;
                            let status = 'upcoming';
                            
                            if (endDate) {
                                if (now < eventDate) status = 'upcoming';
                                else if (now >= eventDate && now <= endDate) status = 'ongoing';
                                else status = 'completed';
                            } else {
                                const eventDay = new Date(eventDate);
                                eventDay.setHours(23, 59, 59, 999);
                                if (now < eventDate) status = 'upcoming';
                                else if (now <= eventDay) status = 'ongoing';
                                else status = 'completed';
                            }
                        %>
                        <span class="badge bg-<%= status === 'upcoming' ? 'success' : status === 'ongoing' ? 'warning' : 'secondary' %>">
                            <%= status.charAt(0).toUpperCase() + status.slice(1) %>
                        </span>
                    </div>
                    <% if (event.featured) { %>
                        <span class="featured-badge">
                            <i class="fas fa-star"></i> Currently Featured
                        </span>
                    <% } %>
                </div>
            </div>

            <!-- Current Image -->
            <% if (event.imagePath || event.imageFile) { %>
                <div class="current-image">
                    <h5><i class="fas fa-image text-primary"></i> Current Event Image</h5>
                    <img src="/event-image/<%= event._id %>" alt="<%= event.title %>" class="img-fluid">
                    <p class="mb-2">
                        <a href="/event-image/<%= event._id %>" target="_blank" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-eye"></i> View Full Image
                        </a>
                    </p>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="removeImage" id="removeImage">
                        <label class="form-check-label text-danger" for="removeImage">
                            <i class="fas fa-trash"></i> Remove current image and upload new one
                        </label>
                    </div>
                </div>
            <% } %>

            <form id="editEventForm" action="/update-event/<%= event._id %>" method="POST" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label" for="eventTitle">Event Title *</label>
                            <input type="text" class="form-control" id="eventTitle" name="title" 
                                   value="<%= event.title %>" placeholder="Enter event title" required>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label" for="eventDate">Start Date & Time *</label>
                            <input type="datetime-local" class="form-control" id="eventDate" name="date" 
                                   value="<%= new Date(event.date).toISOString().slice(0, 16) %>" required>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label" for="eventEndDate">End Date & Time (Optional)</label>
                            <input type="datetime-local" class="form-control" id="eventEndDate" name="endDate" 
                                   value="<%= event.endDate ? new Date(event.endDate).toISOString().slice(0, 16) : '' %>">
                            <small class="text-muted">For multi-day events. Leave empty for single-day events.</small>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label" for="eventVenue">Venue *</label>
                            <input type="text" class="form-control" id="eventVenue" name="venue" 
                                   value="<%= event.venue %>" placeholder="Enter event venue" required>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label" for="eventDescription">Description *</label>
                    <textarea class="form-control" id="eventDescription" name="description" 
                              rows="3" placeholder="Describe the event..." required><%= event.description %></textarea>
                </div>

                <div class="form-group">
                    <label class="form-label" for="eventLink">Event Link (Optional)</label>
                    <input type="url" class="form-control" id="eventLink" name="link" 
                           value="<%= event.link || '' %>" placeholder="https://example.com/event-registration">
                </div>

                <div class="form-group">
                    <label class="form-label">Update Event Image (Optional)</label>
                    <div class="file-upload" id="imageUploadArea">
                        <i class="fas fa-image fa-3x text-primary mb-3"></i>
                        <h5>Drop new event image here or click to browse</h5>
                        <p class="text-muted">Supported formats: JPG, PNG, GIF (Max: 5MB). Leave empty to keep current image.</p>
                        <input type="file" class="d-none" id="eventImage" name="eventImage" 
                               accept=".jpg,.jpeg,.png,.gif">
                        <button type="button" class="btn btn-primary mt-2" onclick="document.getElementById('eventImage').click()">
                            <i class="fas fa-folder-open"></i> Choose New Image
                        </button>
                        <div id="imageName" class="mt-2 text-success fw-bold"></div>
                    </div>
                    <img id="imagePreview" class="image-preview" alt="Image preview">
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group form-check">
                            <input type="checkbox" class="form-check-input" id="featuredEvent" name="featured" <%= event.featured ? 'checked' : '' %>>
                            <label class="form-check-label" for="featuredEvent">
                                Feature this event on homepage
                            </label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <% if (event.featured) { %>
                            <div class="form-group form-check">
                                <input type="checkbox" class="form-check-input" id="removeFeatured" name="removeFeatured">
                                <label class="form-check-label text-danger" for="removeFeatured">
                                    <i class="fas fa-star"></i> Remove from featured events
                                </label>
                            </div>
                        <% } %>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="fas fa-save"></i> Update Event
                    </button>
                    <a href="/admin-events" class="btn btn-outline-secondary btn-lg">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </form>
        </div>

        <!-- Quick Actions -->
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-bolt"></i> Quick Actions</h5>
                <div class="btn-group">
                    <% if (event.featured) { %>
                        <button onclick="unfeatureEvent('<%= event._id %>')" class="btn btn-warning btn-sm">
                            <i class="fas fa-star"></i> Unfeature Event
                        </button>
                    <% } else { %>
                        <form action="/update-event/<%= event._id %>" method="POST" style="display: inline;">
                            <input type="hidden" name="featured" value="on">
                            <button type="submit" class="btn btn-success btn-sm">
                                <i class="fas fa-star"></i> Feature Event
                            </button>
                        </form>
                    <% } %>
                    <form action="/delete-event/<%= event._id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this event? This action cannot be undone.')" style="display: inline;">
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i> Delete Event
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Instructions -->
        <div class="alert alert-info mt-4">
            <h5><i class="fas fa-info-circle"></i> Editing Instructions</h5>
            <ul class="mb-0">
                <li>Update any field to correct mistakes</li>
                <li>Use end date for multi-day events to enable "Ongoing" status</li>
                <li>Check "Remove current image" to delete the attached image</li>
                <li>Upload a new image to replace the current one</li>
                <li>Leave image field unchanged to keep the current image</li>
                <li>Featured events appear prominently on the homepage</li>
                <li>Use "Remove from featured" to unfeature without changing other settings</li>
            </ul>
        </div>
    </div>

    <!-- JavaScript -->
    <script>
        // Image upload handling
        const imageInput = document.getElementById('eventImage');
        const imageUploadArea = document.getElementById('imageUploadArea');
        const fileNameDisplay = document.getElementById('imageName');
        const imagePreview = document.getElementById('imagePreview');
        const editEventForm = document.getElementById('editEventForm');

        // Image selection handling
        imageInput.addEventListener('change', function(e) {
            if (this.files.length > 0) {
                const file = this.files[0];
                fileNameDisplay.textContent = `Selected: ${file.name} (${(file.size / 1024 / 1024).toFixed(2)} MB)`;
                
                // Validate file type
                if (!file.type.startsWith('image/')) {
                    alert('Error: Only image files are allowed!');
                    this.value = '';
                    fileNameDisplay.textContent = '';
                    return;
                }
                
                // Validate file size
                if (file.size > 5 * 1024 * 1024) {
                    alert('Error: File size must be less than 5MB!');
                    this.value = '';
                    fileNameDisplay.textContent = '';
                    return;
                }
                
                // Show preview
                const reader = new FileReader();
                reader.onload = function(e) {
                    imagePreview.src = e.target.result;
                    imagePreview.style.display = 'block';
                };
                reader.readAsDataURL(file);
            }
        });

        // Drag and drop functionality
        imageUploadArea.addEventListener('dragover', function(e) {
            e.preventDefault();
            this.classList.add('dragover');
        });

        imageUploadArea.addEventListener('dragleave', function(e) {
            e.preventDefault();
            this.classList.remove('dragover');
        });

        imageUploadArea.addEventListener('drop', function(e) {
            e.preventDefault();
            this.classList.remove('dragover');
            
            const files = e.dataTransfer.files;
            if (files.length > 0) {
                imageInput.files = files;
                imageInput.dispatchEvent(new Event('change'));
            }
        });

        // Click to select file
        imageUploadArea.addEventListener('click', function() {
            imageInput.click();
        });

        // Form validation
        editEventForm.addEventListener('submit', function(e) {
            const title = document.getElementById('eventTitle').value.trim();
            const date = document.getElementById('eventDate').value;
            const venue = document.getElementById('eventVenue').value.trim();
            const description = document.getElementById('eventDescription').value.trim();
            const startDate = new Date(date);
            const endDateInput = document.getElementById('eventEndDate').value;
            
            let errors = [];

            if (!title) errors.push('Event title is required');
            if (!date) errors.push('Event date is required');
            if (!venue) errors.push('Venue is required');
            if (!description) errors.push('Description is required');
            
            // Validate end date
            if (endDateInput) {
                const endDate = new Date(endDateInput);
                if (endDate <= startDate) {
                    errors.push('End date must be after start date');
                }
            }

            if (errors.length > 0) {
                e.preventDefault();
                alert('Please fix the following errors:\n\n• ' + errors.join('\n• '));
            } else {
                // Show loading state
                const submitBtn = this.querySelector('button[type="submit"]');
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Updating...';
                submitBtn.disabled = true;
            }
        });

        // Unfeature event function
        function unfeatureEvent(eventId) {
            if (confirm('Are you sure you want to remove this event from featured?')) {
                fetch(`/unfeature-event/${eventId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => {
                    if (response.ok) {
                        window.location.reload();
                    } else {
                        alert('Error unfeaturing event');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error unfeaturing event');
                });
            }
        }

        // Handle remove featured checkbox
        const featuredCheckbox = document.getElementById('featuredEvent');
        const removeFeaturedCheckbox = document.getElementById('removeFeatured');
        
        if (featuredCheckbox && removeFeaturedCheckbox) {
            featuredCheckbox.addEventListener('change', function() {
                if (this.checked) {
                    removeFeaturedCheckbox.checked = false;
                }
            });
            
            removeFeaturedCheckbox.addEventListener('change', function() {
                if (this.checked) {
                    featuredCheckbox.checked = false;
                }
            });
        }
    </script>
</body>
</html>