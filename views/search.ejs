                    <li><strong>Friday:</strong> General Vigil - 10:00 PM</li>
                    <li><strong>Saturday:</strong> Workers' Meeting / Bible Study - 9:00 AM</li>
                </ul>
            </div>
            <div class="footer-column">
                <h3>Connect With Us</h3>
                <ul>
                    <li><a href="#"><i class="fab fa-facebook"></i> Facebook</a></li>
                    <li><a href="#"><i class="fab fa-instagram"></i> Instagram</a></li>
                    <li><a href="#"><i class="fab fa-youtube"></i> YouTube</a></li>
                    <li><a href="#"><i class="fas fa-globe"></i> Official Website</a></li>
                </ul>
            </div>
        </div>
        <div class="copyright">
            <p>&copy; 2023 The Lord's Chosen Charismatic Revival Ministries. All Rights Reserved.</p>
        </div>
    </div>
</footer>

    <!-- JavaScript -->
    <script>
        // Mobile menu toggle
        document.querySelector('.mobile-menu')?.addEventListener('click', function() {
            const nav = document.querySelector('nav ul');
            if (nav.style.display === 'flex') {
                nav.style.display = 'none';
            } else {
                nav.style.display = 'flex';
            }
        });

        // Message card animations
        document.querySelectorAll('.message-card').forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-5px)';
            });
            
            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
            });
        });

        // Focus on search input and select all text
        const searchInput = document.querySelector('input[name="q"]');
        if (searchInput) {
            searchInput.focus();
            searchInput.select();
        }

        // Enhanced search highlighting
        function highlightSearchTerms() {
            const searchQuery = '<%= searchQuery %>';
            if (!searchQuery || searchQuery.trim() === '') return;

            const searchTerms = searchQuery.toLowerCase().split(' ').filter(term => term.length > 2);
            
            if (searchTerms.length === 0) return;

            // Highlight in message cards
            document.querySelectorAll('.message-card').forEach(card => {
                // Title
                const title = card.querySelector('h3');
                if (title) {
                    let titleText = title.textContent;
                    searchTerms.forEach(term => {
                        const regex = new RegExp(term, 'gi');
                        titleText = titleText.replace(regex, match => 
                            '<span class="search-highlight">' + match + '</span>'
                        );
                    });
                    title.innerHTML = titleText;
                }

                // Description
                const description = card.querySelector('.message-description');
                if (description) {
                    let descText = description.textContent;
                    searchTerms.forEach(term => {
                        const regex = new RegExp(term, 'gi');
                        descText = descText.replace(regex, match => 
                            '<span class="search-highlight">' + match + '</span>'
                        );
                    });
                    description.innerHTML = descText;
                }

                // Author
                const authorSpans = card.querySelectorAll('.message-meta span');
                if (authorSpans.length > 1) {
                    let authorText = authorSpans[1].textContent;
                    searchTerms.forEach(term => {
                        const regex = new RegExp(term, 'gi');
                        authorText = authorText.replace(regex, match => 
                            '<span class="search-highlight">' + match + '</span>'
                        );
                    });
                    authorSpans[1].innerHTML = authorText;
                }

                // Code
                const code = card.querySelector('.message-code');
                if (code) {
                    let codeText = code.textContent;
                    searchTerms.forEach(term => {
                        const regex = new RegExp(term, 'gi');
                        codeText = codeText.replace(regex, match => 
                            '<span class="search-highlight">' + match + '</span>'
                        );
                    });
                    code.innerHTML = codeText;
                }
            });
        }

        // Initialize highlighting when page loads
        document.addEventListener('DOMContentLoaded', highlightSearchTerms);

        // Quick search suggestions
        document.addEventListener('keydown', function(e) {
            if (e.target.name === 'q' && e.key === 'Enter') {
                const searchTerm = e.target.value.trim();
                if (searchTerm.length < 2) {
                    e.preventDefault();
                    alert('Please enter at least 2 characters to search.');
                }
            }
        });

        // Auto-expand search form on focus for mobile
        if (searchInput) {
            searchInput.addEventListener('focus', function() {
                if (window.innerWidth < 768) {
                    this.style.transform = 'scale(1.02)';
                }
            });

            searchInput.addEventListener('blur', function() {
                this.style.transform = 'scale(1)';
            });
        }
    </script>
</body>
</html>
