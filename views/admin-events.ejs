<script>
    // ===== MOBILE-FRIENDLY FILE UPLOAD HANDLING =====
    const imageInput = document.getElementById('eventImage');
    const imageUploadArea = document.getElementById('imageUploadArea');
    const imageNameDisplay = document.getElementById('imageName');
    const imagePreview = document.getElementById('imagePreview');
    const eventForm = document.getElementById('eventForm');

    // Set default dates and handle end date logic
    document.addEventListener('DOMContentLoaded', function() {
        // Set default start date to current datetime
        const now = new Date();
        now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
        const eventDateInput = document.getElementById('eventDate');
        if (eventDateInput) {
            eventDateInput.value = now.toISOString().slice(0, 16);
        }
        
        // Set default end date to start date + 2 hours (optional)
        const endDateInput = document.getElementById('eventEndDate');
        if (endDateInput) {
            const endDate = new Date(now);
            endDate.setHours(endDate.getHours() + 2);
            endDateInput.value = endDate.toISOString().slice(0, 16);
        }
        
        // Validate that end date is after start date
        if (eventDateInput) {
            eventDateInput.addEventListener('change', function() {
                const startDate = new Date(this.value);
                const endDateInput = document.getElementById('eventEndDate');
                if (endDateInput && endDateInput.value) {
                    const endDate = new Date(endDateInput.value);
                    
                    if (endDate <= startDate) {
                        endDateInput.value = '';
                        showMobileAlert('End date must be after start date');
                    }
                }
            });
        }

        // Initialize mobile file upload listeners
        initMobileFileUpload();
    });

    // ===== MOBILE FILE UPLOAD INITIALIZATION =====
    function initMobileFileUpload() {
        // Handle mobile file input if it exists
        const mobileFileInput = document.getElementById('eventImageMobile');
        if (mobileFileInput) {
            mobileFileInput.addEventListener('change', function(e) {
                if (this.files.length > 0) {
                    handleFileSelection(this.files[0]);
                }
            });
        }

        // Handle desktop file input if it exists
        const desktopFileInput = document.getElementById('eventImageDesktop');
        const desktopUploadBtn = document.getElementById('desktopUploadBtn');
        
        if (desktopUploadBtn && desktopFileInput) {
            desktopUploadBtn.addEventListener('click', function() {
                desktopFileInput.click();
            });
            
            desktopFileInput.addEventListener('change', function(e) {
                if (this.files.length > 0) {
                    handleFileSelection(this.files[0]);
                }
            });
        }

        // Add touch support for file upload area
        if (imageUploadArea && 'ontouchstart' in window) {
            imageUploadArea.style.cursor = 'pointer';
            
            imageUploadArea.addEventListener('touchstart', function(e) {
                e.preventDefault();
                this.classList.add('dragover');
                
                // On mobile, trigger file input
                if (mobileFileInput) {
                    mobileFileInput.click();
                } else if (imageInput) {
                    imageInput.click();
                }
            }, { passive: false });

            imageUploadArea.addEventListener('touchend', function(e) {
                e.preventDefault();
                this.classList.remove('dragover');
            }, { passive: false });
        }
    }

    // ===== UNIFIED FILE HANDLER =====
    function handleFileSelection(file) {
        if (!file) return;
        
        imageNameDisplay.textContent = `Selected: ${file.name} (${(file.size / 1024 / 1024).toFixed(2)} MB)`;
        
        // Validate file type
        const validTypes = [
            'image/jpeg', 'image/jpg', 'image/png', 
            'image/gif', 'image/webp', 'image/heic', 
            'image/heif'
        ];
        
        if (!validTypes.includes(file.type.toLowerCase())) {
            showMobileAlert('Error: Only image files are allowed! (JPG, PNG, GIF, WebP)');
            resetFileInputs();
            return;
        }
        
        // Validate file size
        if (file.size > 5 * 1024 * 1024) {
            showMobileAlert('Error: File size must be less than 5MB!');
            resetFileInputs();
            return;
        }
        
        // Show preview
        const reader = new FileReader();
        reader.onload = function(e) {
            if (imagePreview) {
                imagePreview.src = e.target.result;
                imagePreview.style.display = 'block';
            }
        };
        reader.onerror = function() {
            showMobileAlert('Error reading file. Please try another image.');
            resetFileInputs();
        };
        reader.readAsDataURL(file);
    }

    // ===== RESET FILE INPUTS =====
    function resetFileInputs() {
        const mobileInput = document.getElementById('eventImageMobile');
        const desktopInput = document.getElementById('eventImageDesktop');
        
        if (mobileInput) mobileInput.value = '';
        if (desktopInput) desktopInput.value = '';
        if (imageInput) imageInput.value = '';
        
        if (imageNameDisplay) imageNameDisplay.textContent = '';
        if (imagePreview) imagePreview.style.display = 'none';
    }

    // ===== DRAG AND DROP FUNCTIONALITY =====
    if (imageUploadArea) {
        // Desktop drag and drop
        imageUploadArea.addEventListener('dragover', function(e) {
            e.preventDefault();
            this.classList.add('dragover');
        });

        imageUploadArea.addEventListener('dragleave', function(e) {
            e.preventDefault();
            this.classList.remove('dragover');
        });

        imageUploadArea.addEventListener('drop', function(e) {
            e.preventDefault();
            this.classList.remove('dragover');
            
            const files = e.dataTransfer.files;
            if (files.length > 0) {
                const file = files[0];
                
                // For desktop, use the main image input
                if (imageInput) {
                    const dataTransfer = new DataTransfer();
                    dataTransfer.items.add(file);
                    imageInput.files = dataTransfer.files;
                    handleFileSelection(file);
                } else {
                    handleFileSelection(file);
                }
            }
        });

        // Click to select file (desktop)
        imageUploadArea.addEventListener('click', function(e) {
            // Only trigger on desktop or if no mobile-specific input
            if (window.innerWidth > 768 || !document.getElementById('eventImageMobile')) {
                if (imageInput) {
                    imageInput.click();
                }
            }
        });
    }

    // ===== IMAGE INPUT HANDLER =====
    if (imageInput) {
        imageInput.addEventListener('change', function(e) {
            if (this.files.length > 0) {
                handleFileSelection(this.files[0]);
            }
        });
    }

    // ===== FORM VALIDATION =====
    if (eventForm) {
        eventForm.addEventListener('submit', function(e) {
            const title = document.getElementById('eventTitle')?.value.trim();
            const date = document.getElementById('eventDate')?.value;
            const venue = document.getElementById('eventVenue')?.value.trim();
            const description = document.getElementById('eventDescription')?.value.trim();
            const startDate = date ? new Date(date) : null;
            const endDateInput = document.getElementById('eventEndDate')?.value;
            
            let errors = [];

            if (!title) errors.push('Event title is required');
            if (!date) errors.push('Event date is required');
            if (!venue) errors.push('Venue is required');
            if (!description) errors.push('Description is required');
            
            // Check if ANY file input has a file (MOBILE COMPATIBLE)
            let hasFile = false;
            
            // Check mobile input
            const mobileInput = document.getElementById('eventImageMobile');
            if (mobileInput && mobileInput.files.length > 0) hasFile = true;
            
            // Check desktop input
            const desktopInput = document.getElementById('eventImageDesktop');
            if (desktopInput && desktopInput.files.length > 0) hasFile = true;
            
            // Check main input
            if (imageInput && imageInput.files.length > 0) hasFile = true;
            
            if (!hasFile) {
                errors.push('Event image is required');
            }
            
            // Validate end date
            if (endDateInput && startDate) {
                const endDate = new Date(endDateInput);
                if (endDate <= startDate) {
                    errors.push('End date must be after start date');
                }
            }

            if (errors.length > 0) {
                e.preventDefault();
                
                // Mobile-friendly alert
                if ('ontouchstart' in window || window.innerWidth <= 768) {
                    showMobileErrorList(errors);
                } else {
                    alert('Please fix the following errors:\n\nâ€¢ ' + errors.join('\nâ€¢ '));
                }
                return;
            }

            // Validate file size again before upload
            let selectedFile;
            if (mobileInput && mobileInput.files.length > 0) {
                selectedFile = mobileInput.files[0];
            } else if (desktopInput && desktopInput.files.length > 0) {
                selectedFile = desktopInput.files[0];
            } else if (imageInput && imageInput.files.length > 0) {
                selectedFile = imageInput.files[0];
            }

            if (selectedFile && selectedFile.size > 5 * 1024 * 1024) {
                e.preventDefault();
                showMobileAlert('Error: File size must be less than 5MB!');
                return;
            }

            // Show loading state
            const submitBtn = this.querySelector('button[type="submit"]');
            if (submitBtn) {
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Uploading...';
                submitBtn.disabled = true;
                
                // Re-enable button after 30 seconds in case of error
                setTimeout(() => {
                    submitBtn.innerHTML = '<i class="fas fa-upload"></i> Upload Event';
                    submitBtn.disabled = false;
                }, 30000);
            }
        });
    }

    // ===== MOBILE-FRIENDLY ALERT SYSTEM =====
    function showMobileAlert(message) {
        if ('ontouchstart' in window || window.innerWidth <= 768) {
            // Use Bootstrap modal for mobile
            const modalId = 'mobileAlertModal';
            let modalElement = document.getElementById(modalId);
            
            if (!modalElement) {
                const modalHTML = `
                    <div class="modal fade" id="${modalId}" tabindex="-1">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header bg-warning">
                                    <h5 class="modal-title">
                                        <i class="fas fa-exclamation-triangle"></i> Notice
                                    </h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    <p id="mobileAlertMessage"></p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">OK</button>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
                
                const modalDiv = document.createElement('div');
                modalDiv.innerHTML = modalHTML;
                document.body.appendChild(modalDiv);
                modalElement = document.getElementById(modalId);
            }
            
            document.getElementById('mobileAlertMessage').textContent = message;
            const modal = new bootstrap.Modal(modalElement);
            modal.show();
        } else {
            alert(message);
        }
    }

    function showMobileErrorList(errors) {
        const modalId = 'mobileErrorModal';
        let modalElement = document.getElementById(modalId);
        
        if (!modalElement) {
            const modalHTML = `
                <div class="modal fade" id="${modalId}" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header bg-danger text-white">
                                <h5 class="modal-title">
                                    <i class="fas fa-exclamation-circle"></i> Fix Required
                                </h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <p class="mb-2">Please fix the following errors:</p>
                                <ul id="mobileErrorList" class="mb-0"></ul>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">OK</button>
                            </div>
                        </div>
                    </div>
                </div>
            `;
            
            const modalDiv = document.createElement('div');
            modalDiv.innerHTML = modalHTML;
            document.body.appendChild(modalDiv);
            modalElement = document.getElementById(modalId);
        }
        
        const errorList = document.getElementById('mobileErrorList');
        errorList.innerHTML = '';
        errors.forEach(error => {
            const li = document.createElement('li');
            li.textContent = error;
            errorList.appendChild(li);
        });
        
        const modal = new bootstrap.Modal(modalElement);
        modal.show();
    }

    // ===== LOAD AND DISPLAY EVENTS - UPDATED FOR VERTICAL LAYOUT =====
    async function loadEvents() {
        try {
            const response = await fetch('/events-data');
            let events = await response.json();
            
            const eventsList = document.getElementById('eventsList');
            
            if (events.length === 0) {
                eventsList.innerHTML = `
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-calendar-times fa-3x mb-3"></i>
                        <h5>No Events Yet</h5>
                        <p>Add your first event using the form above.</p>
                    </div>
                `;
                return;
            }
            
            // Sort events: featured first, then by date (upcoming first)
            events.sort((a, b) => {
                // Featured events first
                if (a.featured && !b.featured) return -1;
                if (!a.featured && b.featured) return 1;
                
                // Then by date (upcoming first)
                const dateA = new Date(a.date);
                const dateB = new Date(b.date);
                const now = new Date();
                
                // Both upcoming: sort by date (sooner first)
                if (dateA > now && dateB > now) {
                    return dateA - dateB;
                }
                // One upcoming, one past: upcoming first
                if (dateA > now && dateB <= now) return -1;
                if (dateA <= now && dateB > now) return 1;
                
                // Both past: sort by date (most recent first)
                return dateB - dateA;
            });
            
            let eventsHTML = '';
            
            // Add featured events section if there are any
            const featuredEvents = events.filter(event => event.featured);
            if (featuredEvents.length > 0) {
                eventsHTML += `
                    <div class="featured-events-section mb-4">
                        <h4 class="text-warning mb-3">
                            <i class="fas fa-star"></i> Featured Events (${featuredEvents.length})
                        </h4>
                        ${featuredEvents.map(event => generateEventHTML(event, true)).join('')}
                    </div>
                `;
            }
            
            // Add regular events section
            const regularEvents = events.filter(event => !event.featured);
            if (regularEvents.length > 0) {
                eventsHTML += `
                    <div class="regular-events-section">
                        <h4 class="text-primary mb-3">
                            <i class="fas fa-calendar-alt"></i> All Events (${regularEvents.length})
                        </h4>
                        ${regularEvents.map(event => generateEventHTML(event, false)).join('')}
                    </div>
                `;
            }
            
            eventsList.innerHTML = eventsHTML;
            
        } catch (error) {
            console.error('Error loading events:', error);
            document.getElementById('eventsList').innerHTML = `
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle"></i> Error loading events. Please refresh the page.
                </div>
            `;
        }
    }

    // ===== HELPER FUNCTION TO GENERATE EVENT HTML =====
    function generateEventHTML(event, isFeatured) {
        const eventDate = new Date(event.date);
        const endDate = event.endDate ? new Date(event.endDate) : null;
        const now = new Date();
        
        // Calculate status
        let status = 'upcoming';
        let statusClass = 'status-upcoming';
        
        if (endDate) {
            // Multi-day event
            if (now < eventDate) {
                status = 'upcoming';
                statusClass = 'status-upcoming';
            } else if (now >= eventDate && now <= endDate) {
                status = 'ongoing';
                statusClass = 'status-ongoing';
            } else {
                status = 'completed';
                statusClass = 'status-completed';
            }
        } else {
            // Single-day event
            const eventDay = new Date(eventDate);
            eventDay.setHours(23, 59, 59, 999);
            
            if (now < eventDate) {
                status = 'upcoming';
                statusClass = 'status-upcoming';
            } else if (now <= eventDay) {
                status = 'ongoing';
                statusClass = 'status-ongoing';
            } else {
                status = 'completed';
                statusClass = 'status-completed';
            }
        }
        
        // Format date display
        let dateDisplay = eventDate.toLocaleDateString();
        let timeDisplay = eventDate.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
        
        if (endDate) {
            dateDisplay = `${eventDate.toLocaleDateString()} - ${endDate.toLocaleDateString()}`;
            const endTimeDisplay = endDate.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
            timeDisplay = `${timeDisplay} to ${endTimeDisplay}`;
        }
        
        return `
            <div class="event-card ${isFeatured ? 'featured-event' : ''} ${status === 'completed' ? 'opacity-75' : ''} mb-3">
                <div class="row g-0">
                    <div class="col-md-3">
                        <img src="/event-image/${event._id}" alt="${event.title}" class="event-image">
                    </div>
                    <div class="col-md-9">
                        <div class="event-details">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div>
                                    <h5 class="mb-1">${event.title}</h5>
                                    <p class="text-muted mb-1">
                                        <i class="far fa-calendar"></i> ${dateDisplay} â€¢ 
                                        <i class="far fa-clock"></i> ${timeDisplay}
                                    </p>
                                    <p class="mb-1"><strong>Venue:</strong> ${event.venue}</p>
                                </div>
                                <div class="d-flex gap-1">
                                    ${event.featured ? '<span class="badge bg-warning">Featured</span>' : ''}
                                    <span class="event-status-badge ${statusClass}">
                                        ${status === 'ongoing' ? 'ðŸ”¥ ' : ''}${status.charAt(0).toUpperCase() + status.slice(1)}
                                    </span>
                                </div>
                            </div>
                            <p class="mb-2">${event.description}</p>
                            ${event.link ? `<p class="mb-2"><strong>Link:</strong> <a href="${event.link}" target="_blank">${event.link}</a></p>` : ''}
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    Created: ${new Date(event.createdAt).toLocaleDateString()}
                                </small>
                                <div class="action-buttons">
                                    <!-- EDIT BUTTON -->
                                    <a href="/edit-event/${event._id}" class="btn btn-primary btn-sm me-2">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    ${event.featured ? `
                                        <button onclick="unfeatureEvent('${event._id}')" class="btn btn-warning btn-sm me-2" title="Remove from Featured">
                                            <i class="fas fa-star"></i> Unfeature
                                        </button>
                                    ` : ''}
                                    <form action="/delete-event/${event._id}" method="POST" onsubmit="return confirm('Are you sure you want to delete \"${event.title}\"?')" style="display: inline;">
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        `;
    }

    // ===== UNFEATURE EVENT FUNCTION =====
    function unfeatureEvent(eventId) {
        if (confirm('Are you sure you want to remove this event from featured?')) {
            fetch(`/unfeature-event/${eventId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
            .then(response => {
                if (response.ok) {
                    window.location.reload();
                } else {
                    showMobileAlert('Error unfeaturing event');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showMobileAlert('Error unfeaturing event');
            });
        }
    }

    // ===== FORM RESET HANDLER =====
    if (eventForm) {
        const resetBtn = eventForm.querySelector('button[type="reset"]');
        if (resetBtn) {
            resetBtn.addEventListener('click', function() {
                // Clear file inputs
                resetFileInputs();
                
                // Reset loading state if any
                const submitBtn = eventForm.querySelector('button[type="submit"]');
                if (submitBtn) {
                    submitBtn.innerHTML = '<i class="fas fa-upload"></i> Upload Event';
                    submitBtn.disabled = false;
                }
            });
        }
    }

    // ===== MOBILE FORM FIELD FOCUS FIX =====
    if ('ontouchstart' in window) {
        // Prevent zoom on focus for iOS
        document.querySelectorAll('input, textarea, select').forEach(el => {
            el.addEventListener('focus', function() {
                this.style.fontSize = '16px';
            });
            el.addEventListener('blur', function() {
                this.style.fontSize = '';
            });
        });
    }

    // ===== LOAD EVENTS WHEN PAGE LOADS =====
    document.addEventListener('DOMContentLoaded', loadEvents);
</script>
</body>
